<header class="absolute inset-x-0 top-0 z-50">
  <nav
    class="flex items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <div class="w-32">
        <img src="/Rappifix.svg" alt="icon rappifix"/>
      </div>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        id="menuToggle"
        onclick=""
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
          data-slot="icon"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="#service" class="text-sm/6 font-semibold text-gray-900"
        >Servicios</a
      >
      <a href="#how" class="text-sm/6 font-semibold text-gray-900"
        >Como funciona</a
      >
      <a href="#social" class="text-sm/6 font-semibold text-gray-900"
        >Sobre nosotros</a
      >
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a
        href="https://wa.me/50766592072?Hola%20quiero%20una%20cotizacion"
        target="_blank"
        class="text-sm/6 font-semibold text-contrast"
        >Contactanos<span aria-hidden="true">&rarr;</span></a
      >
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="mobileMenu" class="lg:hidden hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop -->
    <div class="fixed inset-0 z-50 bg-gray-600 opacity-50"></div>
    <div
      class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
    >
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <div class="w-32">
            <img src="/Rappifix.svg" alt="icon rappifix"/>
          </div>
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700 menuToggle"
          id="menuClose"
          onclick=""
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
            data-slot="icon"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10 pl-5">
          <div class="space-y-2 py-6">
            <a
              href="#home"
              class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
              >Inicio</a
            >
            <a
              href="#service"
              class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
              >Servicios</a
            >
            <a
              href="#how"
              class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
              >Como funciona</a
            >
            <a
              href="#social"
              class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"
              >Sobre nosotros</a
            >
          </div>
          <div class="py-6">
            <a
            href="https://wa.me/50766592072?Hola%20quiero%20una%20cotizacion"
            target="_blank"
            class="text-sm/6 font-semibold text-contrast"
            >Contactanos<span aria-hidden="true">&rarr;</span></a
           >
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function toggleMenu() {
    const mobileMenu = document.getElementById("mobileMenu");
    if (mobileMenu) {
      mobileMenu.classList.toggle("hidden");
    }
  }
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menuToggle");
    const menuClose = document.getElementById("menuClose");
    if (menuToggle) {
      menuToggle.addEventListener("click", toggleMenu);
    }
    if (menuClose) {
      menuClose.addEventListener("click", toggleMenu);
    }
  });
</script>
