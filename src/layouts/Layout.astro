---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Contactiza - Soluciones rápidas y confiables para tareas del hogar. Desde plomería hasta reparaciones eléctricas, estamos aquí para ayudarte."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- Título optimizado con palabras clave -->
		<title>Contactiza | Soluciones rápidas para tus tareas del hogar</title>
		<!-- Open Graph meta tags para redes sociales -->
		<meta
			property="og:title"
			content="Contactiza | Soluciones rápidas para tus tareas del hogar"
		/>
		<meta
			property="og:description"
			content="Confía en Contactiza para resolver tus necesidades de plomería, electricidad, y más. Personal especializado disponible 24/7 para ayudarte."
		/>
		<meta
			property="og:image"
			content="https://rappifix.netlify.app/contactiza.png?v=2"
		/>
		<meta property="og:url" content="https://contactiza.com" />
		<meta property="og:type" content="website" />
		<!-- Twitter Card meta tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Contactiza | Soluciones rápidas para tus tareas del hogar"
		/>
		<meta
			name="twitter:description"
			content="Confía en Contactiza para resolver tus necesidades de plomería, electricidad, y más. Personal especializado disponible 24/7 para ayudarte."
		/>
		<meta
			name="twitter:image"
			content="https://rappifix.netlify.app/contactiza.png?v=2"
		/>
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/contactiza.png" />
		<!-- Canonical URL -->
		<link rel="canonical" href="https://contactiza.com" />
		<!-- Meta Robots -->
		<meta name="robots" content="index, follow" />
		<!-- Meta Keywords -->
		<meta
			name="keywords"
			content="Contactiza, tareas del hogar, plomería, electricidad, reparaciones, servicios domésticos"
		/>
		<!-- Datos estructurados para SEO (Schema.org) -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Contactiza",
				"url": "https://contactiza.com",
				"logo": "https://rappifix.netlify.app/contactiza.png",
				"contactPoint": {
					"@type": "ContactPoint",
					"telephone": "+1-800-555-5555",
					"contactType": "Customer Service",
					"areaServed": "Panama",
					"availableLanguage": ["Spanish", "English"]
				},
				"sameAs": [
					"https://www.facebook.com/contactiza",
					"https://www.instagram.com/contactiza"
				]
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
